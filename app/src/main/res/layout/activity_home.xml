<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tommy.tommy.HomeActivity">

    <TextView
        android:id="@+id/tvFirstQuestion"

        android:ellipsize="end"
        android:gravity="end"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/big_margin"
        android:layout_marginRight="@dimen/end_margin"
        android:maxLines="@integer/question_answer_max_lines"
        android:scrollHorizontally="true"
        android:text=""
        android:textSize="@dimen/text_large_font"
        android:textStyle="bold"
        android:textAppearance="@android:style/TextAppearance.Material.Medium" />

    <TextView
        android:id="@+id/tvFirstQuestionResponse"

        android:ellipsize="end"
        android:layout_alignParentStart="true"
        android:layout_below="@id/tvFirstQuestion"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/start_margin"
        android:layout_marginRight="@dimen/big_margin"
        android:layout_marginTop="@dimen/top_margin"
        android:layout_width="wrap_content"
        android:maxLines="@integer/question_answer_max_lines"
        android:scrollHorizontally="true"
        android:text="@string/home_response_text"
        android:textSize="@dimen/text_large_font"
        android:textStyle="italic"
        android:textAppearance="@android:style/TextAppearance.Material.Medium" />

    <TextView
        android:id="@+id/tvSecondQuestion"

        android:ellipsize="end"
        android:gravity="end"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tvFirstQuestionResponse"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/big_margin"
        android:layout_marginRight="@dimen/end_margin"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:maxLines="@integer/question_answer_max_lines"
        android:scrollHorizontally="true"
        android:text=""
        android:textSize="@dimen/text_medium_font"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvSecondQuestionResponse"

        android:ellipsize="end"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvSecondQuestion"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/start_margin"
        android:layout_marginRight="@dimen/big_margin"
        android:layout_marginTop="@dimen/below_margin"
        android:layout_width="match_parent"
        android:maxLines="@integer/question_answer_max_lines"
        android:scrollHorizontally="true"
        android:text=""
        android:textSize="@dimen/text_medium_font"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/tvThirdQuestion"

        android:ellipsize="end"
        android:gravity="end"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tvSecondQuestionResponse"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/big_margin"
        android:layout_marginRight="@dimen/end_margin"
        android:layout_marginTop="@dimen/below_margin"
        android:layout_width="match_parent"
        android:maxLines="@integer/question_answer_max_lines"
        android:scrollHorizontally="true"
        android:text=""
        android:textSize="@dimen/text_medium_font"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvThirdQuestionResponse"

        android:ellipsize="end"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvThirdQuestion"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/start_margin"
        android:layout_marginRight="@dimen/big_margin"
        android:layout_marginTop="@dimen/below_margin"
        android:layout_width="match_parent"
        android:maxLines="@integer/question_answer_max_lines"
        android:scrollHorizontally="true"
        android:text=""
        android:textSize="@dimen/text_medium_font"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/etUserText"

        android:hint="@string/home_userText_hint"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:layout_above="@+id/bMic"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/start_margin"
        android:layout_marginRight="@dimen/end_margin"
        android:layout_width="match_parent"
        android:maxLines="@integer/user_text_max_lines"
        android:textSize="@dimen/text_large_font" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/bMic"

        android:clickable="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/mic_margin_bottom"
        android:layout_width="wrap_content"
        app:backgroundTint="@color/colorAccent"
        app:fabSize="normal"
        app:srcCompat="@android:drawable/ic_btn_speak_now" />

</RelativeLayout>
